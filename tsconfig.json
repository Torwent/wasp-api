{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "$routes/*": ["src/routes/*"],
      "$lib/*": ["src/lib/*"]
    }
  },
  "include": ["src", "environment.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
